<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="board">
  <insert id="insert" parameterType="Board" useGeneratedKeys="true" keyProperty="no" keyColumn="no">
      INSERT INTO BOARD (no,title,content,writer)
      VALUES(SEQ_BOARD.NEXTVAL, #{title},#{content},#{writer})
  
  </insert>
   
   <select id="selectAll" resultType="Board">
         SELECT no,title,content, writer, regdate FROM BOARD
   </select>
   
   <select id="select">
       SELECT no, title,content,writer,regdate
       FROM BOARD 
   </select>
   
   <update id="update">
        UPDATE BOARD SET TITLE=#{title},CONTENT=#{content},WRITER=#{writer} WHERE no =#{no}
          
   </update>

   <delete id="delete"></delete>


</mapper>

